<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- QZ Tray Configuration Form View -->
    <record id="view_qz_tray_config_form" model="ir.ui.view">
        <field name="name">qz.tray.config.form</field>
        <field name="model">qz.tray.config</field>
        <field name="arch" type="xml">
            <form string="QZ Tray Configuration">
                <sheet>
                    <div class="oe_title">
                        <h1>QZ Tray Configuration</h1>
                    </div>
                    
                    <group>
                        <group string="Certificate Authentication">
                            <field name="certificate" filename="certificate_filename"/>
                            <field name="certificate_filename" invisible="1"/>
                            <field name="private_key" filename="private_key_filename" password="True"/>
                            <field name="private_key_filename" invisible="1"/>
                            <field name="certificate_password" password="True"/>
                            <field name="connection_status" readonly="1"/>
                        </group>
                        
                        <group string="Connection Settings">
                            <field name="connection_timeout"/>
                        </group>
                    </group>
                    
                    <group string="Retry Policy">
                        <group>
                            <field name="retry_enabled"/>
                            <field name="retry_count"/>
                            <field name="retry_delay"/>
                        </group>
                    </group>
                    
                    <div class="oe_chatter">
                        <p class="text-muted">
                            <strong>Note:</strong> Certificate and private key must be in PEM format.
                            Generate certificates using QZ Tray's certificate generation tool.
                        </p>
                    </div>
                </sheet>
                
                <footer>
                    <button name="save_credentials" string="Save Configuration" type="object" class="btn-primary"/>
                    <button name="test_connection" string="Test Connection" type="object" class="btn-secondary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- QZ Tray Configuration Action -->
    <record id="action_qz_tray_config" model="ir.actions.act_window">
        <field name="name">QZ Tray Configuration</field>
        <field name="res_model">qz.tray.config</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{}</field>
    </record>

</odoo>
