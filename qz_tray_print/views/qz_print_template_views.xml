<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_qz_print_template_tree" model="ir.ui.view">
        <field name="name">qz.print.template.tree</field>
        <field name="model">qz.print.template</field>
        <field name="arch" type="xml">
            <tree string="Print Templates">
                <field name="name"/>
                <field name="template_key"/>
                <field name="category"/>
                <field name="version"/>
                <field name="usage_count"/>
                <field name="last_updated"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_qz_print_template_form" model="ir.ui.view">
        <field name="name">qz.print.template.form</field>
        <field name="model">qz.print.template</field>
        <field name="arch" type="xml">
            <form string="Print Template">
                <header>
                    <button name="increment_version" 
                            string="Increment Version" 
                            type="object" 
                            class="btn-primary"
                            invisible="id == False"/>
                    <button name="unregister_template" 
                            string="Unregister" 
                            type="object" 
                            class="btn-secondary"
                            invisible="active == False"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_qz_print_job)d" 
                                type="action" 
                                class="oe_stat_button" 
                                icon="fa-print"
                                context="{'search_default_template_id': template_id}">
                            <field name="usage_count" widget="statinfo" string="Print Jobs"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Inactive" bg_color="text-bg-danger" invisible="active == True"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="template_id"/>
                            <field name="template_key"/>
                            <field name="category"/>
                        </group>
                        <group>
                            <field name="version"/>
                            <field name="last_updated"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group string="Description">
                        <field name="description" nolabel="1"/>
                    </group>
                    <group string="Associated Printers">
                        <field name="printer_ids" nolabel="1">
                            <tree>
                                <field name="name"/>
                                <field name="printer_type"/>
                                <field name="location_id"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_qz_print_template_search" model="ir.ui.view">
        <field name="name">qz.print.template.search</field>
        <field name="model">qz.print.template</field>
        <field name="arch" type="xml">
            <search string="Print Templates">
                <field name="name"/>
                <field name="template_key"/>
                <field name="category"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Receipt" name="receipt" domain="[('category', '=', 'receipt')]"/>
                <filter string="Label" name="label" domain="[('category', '=', 'label')]"/>
                <filter string="Invoice" name="invoice" domain="[('category', '=', 'invoice')]"/>
                <filter string="Document" name="document" domain="[('category', '=', 'document')]"/>
                <filter string="Report" name="report" domain="[('category', '=', 'report')]"/>
                <group expand="0" string="Group By">
                    <filter string="Category" name="group_category" context="{'group_by': 'category'}"/>
                    <filter string="Active Status" name="group_active" context="{'group_by': 'active'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_qz_print_template" model="ir.actions.act_window">
        <field name="name">Print Templates</field>
        <field name="res_model">qz.print.template</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Register a new print template
            </p>
            <p>
                Print templates are QWeb templates that can be used for printing documents.
                Use the "Scan Templates" action to automatically discover and register templates.
            </p>
        </field>
    </record>

    <!-- Server Action for Template Scanning -->
    <record id="action_scan_print_templates" model="ir.actions.server">
        <field name="name">Scan and Register Templates</field>
        <field name="model_id" ref="model_qz_print_template"/>
        <field name="state">code</field>
        <field name="code">
result = model.scan_and_register_templates()
action = {
    'type': 'ir.actions.client',
    'tag': 'display_notification',
    'params': {
        'title': 'Template Scan Complete',
        'message': f"Registered: {result['registered']}, Updated: {result['updated']}, Skipped: {result['skipped']}, Total Active: {result['total_active']}",
        'type': 'success',
        'sticky': False,
    }
}
        </field>
    </record>

    <!-- Server Action for Checking Template Updates -->
    <record id="action_check_template_updates" model="ir.actions.server">
        <field name="name">Check Template Updates</field>
        <field name="model_id" ref="model_qz_print_template"/>
        <field name="state">code</field>
        <field name="code">
result = model.check_template_updates()
action = {
    'type': 'ir.actions.client',
    'tag': 'display_notification',
    'params': {
        'title': 'Template Update Check Complete',
        'message': f"Checked: {result['checked']}, Updated: {result['updated']}",
        'type': 'success',
        'sticky': False,
    }
}
        </field>
    </record>

</odoo>
