<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- System Parameters for QZ Tray Print Integration -->
        
        <!-- Email Notification Settings -->
        <record id="param_email_notifications_enabled" model="ir.config_parameter">
            <field name="key">qz_tray.email_notifications_enabled</field>
            <field name="value">False</field>
        </record>
        
        <!-- Connection Settings -->
        <record id="param_connection_timeout" model="ir.config_parameter">
            <field name="key">qz_tray.connection_timeout</field>
            <field name="value">30</field>
        </record>
        
        <!-- Retry Policy Settings -->
        <record id="param_retry_enabled" model="ir.config_parameter">
            <field name="key">qz_tray.retry_enabled</field>
            <field name="value">True</field>
        </record>
        
        <record id="param_retry_count" model="ir.config_parameter">
            <field name="key">qz_tray.retry_count</field>
            <field name="value">3</field>
        </record>
        
        <record id="param_retry_delay" model="ir.config_parameter">
            <field name="key">qz_tray.retry_delay</field>
            <field name="value">5</field>
        </record>
        
        <!-- Job Retention Settings -->
        <record id="param_job_retention_days" model="ir.config_parameter">
            <field name="key">qz_tray.job_retention_days</field>
            <field name="value">30</field>
        </record>
    </data>
</odoo>
