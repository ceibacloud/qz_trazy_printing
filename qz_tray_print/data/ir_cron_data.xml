<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Scheduled action for processing print job queue -->
        <record id="ir_cron_process_print_queue" model="ir.cron">
            <field name="name">QZ Tray: Process Print Queue</field>
            <field name="model_id" ref="model_qz_print_job"/>
            <field name="state">code</field>
            <field name="code">model.process_queued_jobs()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Scheduled action for checking template updates -->
        <record id="ir_cron_check_template_updates" model="ir.cron">
            <field name="name">QZ Tray: Check Template Updates</field>
            <field name="model_id" ref="model_qz_print_template"/>
            <field name="state">code</field>
            <field name="code">model.check_template_updates()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
