<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Security Groups -->
        <record id="group_qz_print_user" model="res.groups">
            <field name="name">Print User</field>
            <field name="category_id" ref="base.module_category_tools"/>
            <field name="comment">Basic printing capabilities - can submit print jobs and view own job history</field>
        </record>

        <record id="group_qz_print_manager" model="res.groups">
            <field name="name">Print Manager</field>
            <field name="category_id" ref="base.module_category_tools"/>
            <field name="implied_ids" eval="[(4, ref('group_qz_print_user'))]"/>
            <field name="comment">Printer configuration and management - can configure printers and view all jobs for their location</field>
        </record>

        <record id="group_qz_print_admin" model="res.groups">
            <field name="name">Print Administrator</field>
            <field name="category_id" ref="base.module_category_tools"/>
            <field name="implied_ids" eval="[(4, ref('group_qz_print_manager'))]"/>
            <field name="comment">Full access - can configure QZ Tray certificates, manage all printers, and view all print jobs</field>
        </record>

        <!-- Record Rules for Print Jobs -->
        <record id="qz_print_job_user_rule" model="ir.rule">
            <field name="name">Print Job: User can only view own jobs</field>
            <field name="model_id" ref="model_qz_print_job"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_qz_print_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="qz_print_job_manager_rule" model="ir.rule">
            <field name="name">Print Job: Manager can view all jobs</field>
            <field name="model_id" ref="model_qz_print_job"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_qz_print_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="qz_print_job_admin_rule" model="ir.rule">
            <field name="name">Print Job: Administrator can view all jobs</field>
            <field name="model_id" ref="model_qz_print_job"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_qz_print_admin'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>
</odoo>
