<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="qz_tray_print.PrintPreviewDialog">
    <Dialog title="props.title or 'Print Preview'" size="'lg'" contentClass="'qz-print-preview-dialog'">
        <div class="qz-print-preview">
            <t t-if="state.loading">
                <div class="d-flex justify-content-center align-items-center" style="min-height: 400px;">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading preview...</span>
                    </div>
                </div>
            </t>
            
            <t t-elif="state.error">
                <div class="alert alert-danger">
                    <i class="fa fa-exclamation-circle"/> 
                    <strong>Error loading preview:</strong>
                    <span t-esc="state.error"/>
                </div>
            </t>
            
            <t t-else="">
                <div class="qz-preview-container" t-ref="preview"/>
            </t>
        </div>
        
        <t t-set-slot="footer">
            <button class="btn btn-secondary" t-on-click="cancel">
                Cancel
            </button>
            <button 
                class="btn btn-primary" 
                t-on-click="print"
                t-att-disabled="state.loading or state.error">
                <i class="fa fa-print"/> Print
            </button>
        </t>
    </Dialog>
</t>

</templates>
